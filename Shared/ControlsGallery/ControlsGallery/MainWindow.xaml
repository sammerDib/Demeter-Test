<Window x:Class="ControlsGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlsGallery"
        mc:Ignorable="d"
        Title="Controls Gallery" Height="800" Width="800">
    <Grid Background="{StaticResource TabItem.Static.Background}">
        <TabControl Style="{StaticResource TabControlLeftStyle}" TabStripPlacement="Left" >
            <TabItem Header="BUTTONS">
                <local:Buttons></local:Buttons>
            </TabItem>
            <TabItem Header="TOGGLES">
                <local:Toggles></local:Toggles>
            </TabItem>
            
            <TabItem Header="TEXT BOXES">
                <local:TextBoxes></local:TextBoxes>
            </TabItem>
            <TabItem Header="COMBO BOXES">
                <local:ComboBoxes></local:ComboBoxes>
            </TabItem>

            <TabItem Header="LISTS">
                <local:Lists></local:Lists>
            </TabItem>
            <TabItem Header="TAB CONTROLS">
                <local:Tabs></local:Tabs>
            </TabItem>
            <TabItem Header="GROUP BOXES">
                <local:GroupBoxes></local:GroupBoxes>
            </TabItem>
            <TabItem Header="ICONS">
                <local:Icons></local:Icons>
            </TabItem>
            <TabItem Header="GEOMETRIES">
                <local:Geometries></local:Geometries>
            </TabItem>
            <TabItem Header="COLORS">
                <local:ColorsUsed></local:ColorsUsed>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
