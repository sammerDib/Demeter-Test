<UserControl
	x:Class="UnitySC.Shared.ResultUI.HAZE.View.WaferDetails.ProfileView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:UnitySC.Shared.UI.Controls;assembly=UnitySC.Shared.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:waferDetails="clr-namespace:UnitySC.Shared.ResultUI.HAZE.ViewModel.WaferDetails"
	d:DataContext="{d:DesignInstance waferDetails:HazeResultVM}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/UnitySC.Shared.ResultUI.HAZE;component/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<DockPanel>
		<GroupBox
			Width="250"
			Margin="5,5,15,5"
			VerticalAlignment="Center"
			DataContext="{Binding HazeMapVm}"
			DockPanel.Dock="Right"
			Header="Profile">
			<StackPanel Orientation="Vertical">

				<Grid Visibility="{Binding LineProfileVisibility}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>

					<TextBlock
						Grid.Row="0"
						Grid.Column="1"
						Margin="5,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="X" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="2"
						Margin="5,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Y" />
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="Start point" />
					<TextBlock
						Grid.Row="2"
						Grid.Column="0"
						Margin="0,5,0,0"
						VerticalAlignment="Center"
						Text="End point" />

					<controls:TextBoxUnit
						Grid.Row="1"
						Grid.Column="1"
						Margin="5,0,0,0"
						Text="{Binding StartPointX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />
					<controls:TextBoxUnit
						Grid.Row="1"
						Grid.Column="2"
						Margin="5,0,0,0"
						Text="{Binding StartPointY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />
					<controls:TextBoxUnit
						Grid.Row="2"
						Grid.Column="1"
						Margin="5,5,0,0"
						Text="{Binding EndPointX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />
					<controls:TextBoxUnit
						Grid.Row="2"
						Grid.Column="2"
						Margin="5,5,0,0"
						Text="{Binding EndPointY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />

				</Grid>

				<Grid Visibility="{Binding CrossProfileVisibility}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>

					<TextBlock
						Grid.Row="0"
						Grid.Column="1"
						Margin="5,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="X" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="2"
						Margin="5,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Y" />
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="Center point" />

					<controls:TextBoxUnit
						Grid.Row="1"
						Grid.Column="1"
						Margin="5,0,0,0"
						Text="{Binding CrossProfileX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />
					<controls:TextBoxUnit
						Grid.Row="1"
						Grid.Column="2"
						Margin="5,0,0,0"
						Text="{Binding CrossProfileY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Unit="px" />

				</Grid>

				<Separator Margin="0,10,0,10" />

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="5" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<TextBlock
						VerticalAlignment="Center"
						Text="Max" />
					<controls:TextBoxUnit
						Grid.Row="0"
						Grid.Column="2"
						IsReadOnly="True"
						Text="{Binding MaxProfile, Mode=OneWay, StringFormat=N5}"
						Unit="ppm" />
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						Margin="0,5,0,0"
						VerticalAlignment="Center"
						Text="Min" />
					<controls:TextBoxUnit
						Grid.Row="1"
						Grid.Column="2"
						Margin="0,5,0,0"
						IsReadOnly="True"
						Text="{Binding MinProfile, Mode=OneWay, StringFormat=N5}"
						Unit="ppm" />
					<TextBlock
						Grid.Row="2"
						Grid.Column="0"
						Margin="0,5,0,0"
						VerticalAlignment="Center"
						Text="Avg" />
					<controls:TextBoxUnit
						Grid.Row="2"
						Grid.Column="2"
						Margin="0,5,0,0"
						IsReadOnly="True"
						Text="{Binding MeanProfile, Mode=OneWay, StringFormat=N5}"
						Unit="ppm" />
					<TextBlock
						Grid.Row="3"
						Grid.Column="0"
						Margin="0,5,0,0"
						VerticalAlignment="Center"
						Text="Std Dev" />
					<controls:TextBoxUnit
						Grid.Row="3"
						Grid.Column="2"
						Margin="0,5,0,0"
						IsReadOnly="True"
						Text="{Binding StdDevProfile, Mode=OneWay, StringFormat=N5}"
						Unit="ppm" />
				</Grid>

				<Button
					Margin="0,5,0,0"
					Command="{Binding ResetProfileCommand}"
					Content="Reset" />

				<Button
					Margin="0,5,0,0"
					Command="{Binding ExportCsvProfileCommand}"
					Content="Export as csv" />

			</StackPanel>
		</GroupBox>
		<ContentPresenter
			Height="350"
			Content="{Binding HazeProfileChart.Chart}" />
	</DockPanel>
</UserControl>
