<UserControl
	x:Class="UnitySC.Shared.ResultUI.Metro.View.WaferDetail.UserControls.DepthViewer"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:UnitySC.Shared.UI.Controls;assembly=UnitySC.Shared.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:userControls="clr-namespace:UnitySC.Shared.ResultUI.Metro.View.WaferDetail.UserControls"
	x:Name="UserControl"
	d:DesignHeight="150"
	d:DesignWidth="70"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="30" />
			<ColumnDefinition Width="10" />
		</Grid.ColumnDefinitions>

		<Rectangle
			x:Name="BackgroundRect"
			Grid.Row="0"
			Grid.Column="1"
			Height="{Binding ElementName=UserControl, Path=TargetSize}"
			VerticalAlignment="Top"
			Fill="{Binding ElementName=UserControl, Path=Foreground}" />

		<Grid
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Height="{Binding ElementName=UserControl, Path=DepthSize}"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<userControls:Arrow
				Grid.Column="0"
				Margin="0,1,10,2"
				HorizontalAlignment="Left"
				VerticalAlignment="Stretch"
				Angle="90"
				Foreground="{Binding ElementName=UserControl, Path=Foreground}" />
			<Grid
				Grid.Column="1"
				Width="{Binding ElementName=BackgroundRect, Path=ActualWidth}"
				HorizontalAlignment="Right">
				<Rectangle
					Margin="10,1,10,2"
					HorizontalAlignment="Stretch"
					Fill="White" />
				<Control
					x:Name="FillLinesControl"
					Margin="10,1,10,2"
					HorizontalAlignment="Stretch">
					<Control.Template>
						<ControlTemplate TargetType="{x:Type Control}">
							<Rectangle
								HorizontalAlignment="Stretch"
								Stroke="Black">
								<Rectangle.Fill>
									<DrawingBrush
										TileMode="Tile"
										Viewbox="0,0,30,30"
										ViewboxUnits="Absolute"
										Viewport="0,0,5,5"
										ViewportUnits="Absolute">
										<DrawingBrush.Transform>
											<RotateTransform Angle="-45" />
										</DrawingBrush.Transform>
										<DrawingBrush.Drawing>
											<GeometryDrawing>
												<GeometryDrawing.Pen>
													<Pen
														Brush="{Binding Foreground, ElementName=FillLinesControl}"
														Thickness="15" />
												</GeometryDrawing.Pen>
												<GeometryDrawing.Geometry>
													<LineGeometry
														StartPoint="0,0"
														EndPoint="30,0" />
												</GeometryDrawing.Geometry>
											</GeometryDrawing>
										</DrawingBrush.Drawing>
									</DrawingBrush>
								</Rectangle.Fill>
							</Rectangle>
							<ControlTemplate.Triggers>
								<DataTrigger
									Binding="{Binding Tolerance, ElementName=UserControl}"
									Value="Bad">
									<Setter Property="Foreground" Value="{x:Static controls:ToleranceDisplayer.BadColorBrush}" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding Tolerance, ElementName=UserControl}"
									Value="Warning">
									<Setter Property="Foreground" Value="{x:Static controls:ToleranceDisplayer.WarningColorBrush}" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding Tolerance, ElementName=UserControl}"
									Value="Good">
									<Setter Property="Foreground" Value="{x:Static controls:ToleranceDisplayer.GoodColorBrush}" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding Tolerance, ElementName=UserControl}"
									Value="NotMeasured">
									<Setter Property="Foreground" Value="{x:Static controls:ToleranceDisplayer.NotMeasuredColorBrush}" />
								</DataTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Control.Template>
				</Control>

			</Grid>
			<Line
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom"
				Stroke="Black"
				StrokeDashArray="4 2"
				StrokeThickness="2"
				UseLayoutRounding="True"
				X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
		</Grid>

		<Line
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Stroke="Black"
			StrokeDashArray="4 2"
			StrokeThickness="2"
			UseLayoutRounding="True"
			X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />

		<Grid
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			Height="{Binding ElementName=UserControl, Path=TargetSize}"
			VerticalAlignment="Top">
			<Grid>
				<Line
					Margin="0,0,10,0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Bottom"
					Stroke="Black"
					StrokeDashArray="4 2"
					StrokeThickness="2"
					UseLayoutRounding="True"
					X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
				<TextBlock
					Margin="0,0,0,-5"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					Foreground="Black"
					Text="T" />
			</Grid>
		</Grid>

	</Grid>
</UserControl>
