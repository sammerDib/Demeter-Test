<UserControl
    x:Class="UnitySC.Shared.ResultUI.Metro.View.WaferDetail.UserControls.StepViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:UnitySC.Shared.ResultUI.Metro.View.WaferDetail.UserControls"
    x:Name="UserControl"
    d:DesignHeight="150"
    d:DesignWidth="70"
    mc:Ignorable="d">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.Style>
            <Style>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=UserControl, Path=IsStepUp}" Value="False">
                        <Setter Property="Grid.RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="-1" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="{Binding ElementName=UserControl, Path=TargetHeight}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <userControls:Arrow
                Grid.Column="0"
                Margin="3,1,0,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Angle="90"
                Foreground="{Binding ElementName=UserControl, Path=Foreground}" />
            <Grid
                Grid.Column="1"
                Width="3"
                Height="{Binding ElementName=UserControl, Path=TargetHeight}"
                HorizontalAlignment="Center">
                <Rectangle
                    Margin="0,1,0,2"
                    HorizontalAlignment="Stretch"
                    Fill="Black" />
            </Grid>
            <Line
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Stroke="Black"
                StrokeThickness="2"
                UseLayoutRounding="True"
                X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
        </Grid>

        <Line
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Stroke="Black"
            StrokeDashArray="4 4"
            StrokeThickness="2"
            UseLayoutRounding="True"
            X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
        <Line
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Stroke="Black"
            StrokeThickness="2"
            UseLayoutRounding="True"
            X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />

    </Grid>
</UserControl>
