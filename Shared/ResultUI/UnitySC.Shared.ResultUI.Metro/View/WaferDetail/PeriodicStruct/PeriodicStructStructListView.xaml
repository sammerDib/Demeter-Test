<UserControl
	x:Class="UnitySC.Shared.ResultUI.Metro.View.WaferDetail.PeriodicStruct.PeriodicStructStructListView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behaviors="clr-namespace:UnitySC.Shared.UI.Behaviors;assembly=UnitySC.Shared.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:UnitySC.Shared.ResultUI.Metro.View.WaferDetail.PeriodicStruct"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:periodicStruct="clr-namespace:UnitySC.Shared.ResultUI.Metro.ViewModel.WaferDetail.PeriodicStruct"
	xmlns:structDetails="clr-namespace:UnitySC.Shared.ResultUI.Metro.ViewModel.WaferDetail.PeriodicStruct.StructDetails"
	d:DataContext="{d:DesignInstance periodicStruct:PeriodicStructStructListVM}"
	d:DesignHeight="300"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/UnitySC.Shared.ResultUI.Metro;component/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid
		Margin="10"
		HorizontalAlignment="Center"
		VerticalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel Orientation="Vertical">
			<Grid Margin="0,0,5,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock
					Grid.Row="0"
					Grid.Column="0"
					Margin="0,0,5,5"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Text="Selected repeta :"
					Visibility="{Binding HideRepeta, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />
				<ComboBox
					Grid.Column="1"
					Margin="2,0,0,5"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Bottom"
					ItemsSource="{Binding RepetaSource, Mode=OneWay}"
					SelectedItem="{Binding SelectedRepeta}"
					Visibility="{Binding HideRepeta, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />
			</Grid>

			<Grid Margin="0,0,5,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<GroupBox
					Margin="0,1,5,0"
					Header="Height structure stats">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="40" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock
							Grid.Row="0"
							Grid.Column="0"
							Margin="0,3,5,0"
							VerticalAlignment="Center"
							Text="Max" />
						<TextBox
							Grid.Row="0"
							Grid.Column="1"
							Margin="0,3,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MaxHeight, Mode=OneWay}" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							Margin="0,3,0,0"
							VerticalAlignment="Center"
							Text="Min" />
						<TextBox
							Grid.Row="1"
							Grid.Column="1"
							Margin="0,3,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MinHeight, Mode=OneWay}" />
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="0,5,5,0"
							VerticalAlignment="Center"
							Text="Avg" />
						<TextBox
							Grid.Row="2"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MeanHeight, Mode=OneWay}" />
						<TextBlock
							Grid.Row="3"
							Grid.Column="0"
							Margin="0,5,5,0"
							VerticalAlignment="Center"
							Text="3σ" />
						<TextBox
							Grid.Row="3"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding ThreeSigmaHeight, Mode=OneWay}" />
					</Grid>
				</GroupBox>
				<GroupBox
					Grid.Column="1"
					Header="Width structure stats">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="40" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock
							Grid.Row="0"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Max" />
						<TextBox
							Grid.Row="0"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MaxWidth, Mode=OneWay}" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Min" />
						<TextBox
							Grid.Row="1"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MinWidth, Mode=OneWay}" />
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Avg" />
						<TextBox
							Grid.Row="2"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding MeanWidth, Mode=OneWay}" />
						<TextBlock
							Grid.Row="3"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="3σ" />
						<TextBox
							Grid.Row="3"
							Grid.Column="1"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding ThreeSigmaWidth, Mode=OneWay}" />
					</Grid>
				</GroupBox>
			</Grid>
		</StackPanel>

		<ListView
			x:Name="ListView"
			Grid.Column="1"
			Height="211"
			VerticalAlignment="Top"
			Background="Transparent"
			BorderThickness="1"
			ItemsSource="{Binding CurrentStructList}">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="HorizontalContentAlignment" Value="Stretch" />
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.View>
				<GridView x:Name="GridView">
					<GridViewColumn Width="30">
						<GridViewColumn.Header>
							<GridViewColumnHeader Content="Id" />
						</GridViewColumn.Header>
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="{x:Type structDetails:PeriodicStructListStructure}">
								<TextBlock
									HorizontalAlignment="Right"
									Text="{Binding Id}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Width="100"
						behaviors:GridViewColumnBehaviors.Collapsed="{Binding HideRepeta}">
						<GridViewColumn.Header>
							<GridViewColumnHeader Content="Repeta Id" />
						</GridViewColumn.Header>
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="{x:Type structDetails:PeriodicStructListStructure}">
								<TextBlock
									HorizontalAlignment="Right"
									Text="{Binding RepetaId}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="100">
						<GridViewColumn.Header>
							<GridViewColumnHeader Content="Height (µm)" />
						</GridViewColumn.Header>
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="{x:Type structDetails:PeriodicStructListStructure}">
								<TextBlock
									HorizontalAlignment="Right"
									Text="{Binding Height}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="100">
						<GridViewColumn.Header>
							<GridViewColumnHeader Content="Width (µm)" />
						</GridViewColumn.Header>
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="{x:Type structDetails:PeriodicStructListStructure}">
								<TextBlock
									HorizontalAlignment="Right"
									Text="{Binding Width}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</UserControl>
