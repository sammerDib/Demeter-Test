<UserControl
	x:Class="UnitySC.Shared.ResultUI.Common.View.ImageViewer.TwoDimensionsMatrixProfileView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:UnitySC.Shared.UI.Controls;assembly=UnitySC.Shared.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:UnitySC.Shared.ResultUI.Common.ViewModel.ImageViewer"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:TwoDimensionsMatrixViewerVM, IsDesignTimeCreatable=False}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/UnitySC.Shared.ResultUI.Common;component/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<DockPanel>

		<DockPanel
			Dock="Right"
			LastChildFill="False">

			<GroupBox
				Width="250"
				Margin="0,5,5,0"
				VerticalAlignment="Top"
				DockPanel.Dock="Top"
				Header="Settings">
				<StackPanel Orientation="Vertical">

					<Grid Visibility="{Binding TwoDimensionsImageViewer.LineProfileVisibility}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>

						<TextBlock
							Grid.Row="0"
							Grid.Column="1"
							Margin="5,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="X" />
						<TextBlock
							Grid.Row="0"
							Grid.Column="2"
							Margin="5,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="Y" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							VerticalAlignment="Center"
							Text="Start point" />
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="End point" />

						<controls:TextBoxUnit
							Grid.Row="1"
							Grid.Column="1"
							Margin="5,0,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.StartPointX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />
						<controls:TextBoxUnit
							Grid.Row="1"
							Grid.Column="2"
							Margin="5,0,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.StartPointY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />
						<controls:TextBoxUnit
							Grid.Row="2"
							Grid.Column="1"
							Margin="5,5,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.EndPointX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />
						<controls:TextBoxUnit
							Grid.Row="2"
							Grid.Column="2"
							Margin="5,5,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.EndPointY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />

					</Grid>

					<Grid Visibility="{Binding TwoDimensionsImageViewer.CrossProfileVisibility}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>

						<TextBlock
							Grid.Row="0"
							Grid.Column="1"
							Margin="5,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="X" />
						<TextBlock
							Grid.Row="0"
							Grid.Column="2"
							Margin="5,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="Y" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							VerticalAlignment="Center"
							Text="Center point" />

						<controls:TextBoxUnit
							Grid.Row="1"
							Grid.Column="1"
							Margin="5,0,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.CrossProfileX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />
						<controls:TextBoxUnit
							Grid.Row="1"
							Grid.Column="2"
							Margin="5,0,0,0"
							HorizontalContentAlignment="Right"
							Text="{Binding TwoDimensionsImageViewer.CrossProfileY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Unit="px" />

					</Grid>

					<Button
						Margin="0,5,0,0"
						Command="{Binding TwoDimensionsImageViewer.ResetProfileCommand}"
						Content="Reset" />

				</StackPanel>
			</GroupBox>

			<GroupBox
				Width="250"
				Margin="0,5,5,5"
				VerticalAlignment="Top"
				DockPanel.Dock="Top"
				Header="Stats">
				<StackPanel Orientation="Vertical">

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="5" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<TextBlock
							VerticalAlignment="Center"
							Text="Max" />
						<controls:TextBoxUnit
							Grid.Row="0"
							Grid.Column="2"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding Profile.Stats.Max, Mode=OneWay, StringFormat=N5}"
							Unit="{Binding Unit}" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Min" />
						<controls:TextBoxUnit
							Grid.Row="1"
							Grid.Column="2"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding Profile.Stats.Min, Mode=OneWay, StringFormat=N5}"
							Unit="{Binding Unit}" />
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Avg" />
						<controls:TextBoxUnit
							Grid.Row="2"
							Grid.Column="2"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding Profile.Stats.Mean, Mode=OneWay, StringFormat=N5}"
							Unit="{Binding Unit}" />
						<TextBlock
							Grid.Row="3"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							Text="Std Dev" />
						<controls:TextBoxUnit
							Grid.Row="3"
							Grid.Column="2"
							Margin="0,5,0,0"
							HorizontalContentAlignment="Right"
							IsReadOnly="True"
							Text="{Binding Profile.Stats.StdDev, Mode=OneWay, StringFormat=N5}"
							Unit="{Binding Unit}" />
					</Grid>

				</StackPanel>
			</GroupBox>

		</DockPanel>

		<ContentPresenter
			Height="350"
			Content="{Binding Profile.ProfileChart.Chart}" />
	</DockPanel>
</UserControl>
