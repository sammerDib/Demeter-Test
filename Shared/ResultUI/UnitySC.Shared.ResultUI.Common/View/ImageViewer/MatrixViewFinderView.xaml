<UserControl
	x:Class="UnitySC.Shared.ResultUI.Common.View.ImageViewer.MatrixViewFinderView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:commonConverters="clr-namespace:UnitySC.Shared.ResultUI.Common.Converters"
	xmlns:converters="clr-namespace:UnitySC.Shared.UI.Converters;assembly=UnitySC.Shared.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:imageViewer="clr-namespace:UnitySC.Shared.ResultUI.Common.ViewModel.ImageViewer"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:system="clr-namespace:System;assembly=mscorlib"
	x:Name="UserControl"
	d:DataContext="{d:DesignInstance imageViewer:MatrixViewFinderVM}"
	d:DesignHeight="450"
	d:DesignWidth="300"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/UnitySC.Shared.ResultUI.Common;component/Resources.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<commonConverters:DoubleMultiplyMultiConverter x:Key="DoubleMultiplyMultiConverter" />
			<commonConverters:DoubleSubstractionMultiConverer x:Key="DoubleSubstractionMultiConverer" />
			<converters:ScaleToPercentConverter
				x:Key="NotRoundedScaleToPercentConverter"
				Round="False" />
		</ResourceDictionary>
	</UserControl.Resources>

	<DockPanel>

		<Button
			Margin="0,0,0,5"
			Command="{Binding SetFullCommand}"
			Content="Set Full"
			DockPanel.Dock="Top" />

		<Border
			Margin="0,5,0,1"
			Background="White"
			BorderBrush="Gray"
			BorderThickness="1"
			CornerRadius="5"
			DockPanel.Dock="Bottom">
			<StackPanel Orientation="Vertical">

				<UniformGrid
					Margin="0,3,0,3"
					Columns="2">
					<TextBlock
						Margin="5,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">
						<Run Text="Start point: [" /><Run Text="{Binding StartX, Mode=OneWay}" /><Run Text=";" />
						<Run Text="{Binding StartY, Mode=OneWay}" /><Run Text="]" />
					</TextBlock>
					<TextBlock
						Margin="5,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">
						<Run Text="End point: [" /><Run Text="{Binding EndX, Mode=OneWay}" /><Run Text=";" />
						<Run Text="{Binding EndY, Mode=OneWay}" /><Run Text="]" />
					</TextBlock>
				</UniformGrid>

				<UniformGrid
					Margin="0,0,0,3"
					Columns="2">
					<TextBlock
						Margin="5,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">
						<Run Text="Rect size: [" /><Run Text="{Binding RectHeight, Mode=OneWay}" /><Run Text=";" />
						<Run Text="{Binding RectWidth, Mode=OneWay}" /><Run Text="]" />
					</TextBlock>
					<TextBlock
						Margin="5,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">
						<Run Text="Zoom: " /><Run Text="{Binding ElementName=UserControl, Path=ZoomFactor, Mode=OneWay, Converter={StaticResource NotRoundedScaleToPercentConverter}, StringFormat={}{0:0.00}}" /><Run Text="%" />
					</TextBlock>
				</UniformGrid>



			</StackPanel>
		</Border>

		<Border
			BorderBrush="Black"
			BorderThickness="1">
			<Grid>
				<Canvas Background="Black" />
				<Image
					RenderOptions.BitmapScalingMode="NearestNeighbor"
					RenderOptions.EdgeMode="Aliased"
					Source="{Binding Image}" />
				<Canvas
					x:Name="ViewFinderCanvas"
					Margin="0.5,0.5,0,0"
					Background="Transparent"
					MouseMove="OnCanvasMouseMove"
					MouseUp="OnCanvasMouseUp"
					MouseWheel="OnCanvasMouseWheel">

					<!--#region Framework Elements Proxy-->

					<!--  The nesting of MultiBinding not being possible, these elements (not visible) make it possible to recover the result of a multiBinding and to reference it in another multiBinding.  -->
					<FrameworkElement x:Name="RangeHeightControl">
						<FrameworkElement.Tag>
							<MultiBinding Converter="{StaticResource DoubleSubstractionMultiConverer}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
							</MultiBinding>
						</FrameworkElement.Tag>
					</FrameworkElement>
					<FrameworkElement x:Name="RangeWidthControl">
						<FrameworkElement.Tag>
							<MultiBinding Converter="{StaticResource DoubleSubstractionMultiConverer}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
							</MultiBinding>
						</FrameworkElement.Tag>
					</FrameworkElement>
					<FrameworkElement x:Name="RightWidthControl">
						<FrameworkElement.Tag>
							<MultiBinding Converter="{StaticResource DoubleSubstractionMultiConverer}">
								<Binding>
									<Binding.Source>
										<system:Double>1.0</system:Double>
									</Binding.Source>
								</Binding>
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
							</MultiBinding>
						</FrameworkElement.Tag>
					</FrameworkElement>
					<FrameworkElement x:Name="BottomHeightControl">
						<FrameworkElement.Tag>
							<MultiBinding Converter="{StaticResource DoubleSubstractionMultiConverer}">
								<Binding>
									<Binding.Source>
										<system:Double>1.0</system:Double>
									</Binding.Source>
								</Binding>
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
							</MultiBinding>
						</FrameworkElement.Tag>
					</FrameworkElement>

					<!--#endregion Framework Elements Proxy-->

					<!--#region Masks-->

					<!--  Left Mask  -->
					<Rectangle
						Canvas.Left="0"
						Canvas.Top="0"
						Height="{Binding ElementName=ViewFinderCanvas, Path=ActualHeight}"
						Fill="Black"
						IsHitTestVisible="False"
						Opacity="0.3"
						SnapsToDevicePixels="False"
						UseLayoutRounding="False">
						<Rectangle.Width>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Rectangle.Width>
					</Rectangle>

					<!--  Top Center Mask  -->
					<Rectangle
						Canvas.Top="0"
						Fill="Black"
						IsHitTestVisible="False"
						Opacity="0.3"
						SnapsToDevicePixels="False"
						UseLayoutRounding="False">
						<Canvas.Left>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Canvas.Left>
						<Rectangle.Width>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="RangeWidthControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Rectangle.Width>
						<Rectangle.Height>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Rectangle.Height>
					</Rectangle>

					<!--  Right Mask  -->
					<Rectangle
						Canvas.Top="0"
						Height="{Binding ElementName=ViewFinderCanvas, Path=ActualHeight}"
						Fill="Black"
						IsHitTestVisible="False"
						Opacity="0.3"
						SnapsToDevicePixels="False"
						UseLayoutRounding="False">
						<Rectangle.Width>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="RightWidthControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Rectangle.Width>
						<Canvas.Left>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Canvas.Left>
					</Rectangle>

					<!--  Bottom Center Mask  -->
					<Rectangle
						Fill="Black"
						IsHitTestVisible="False"
						Opacity="0.3"
						SnapsToDevicePixels="False"
						UseLayoutRounding="False">
						<Canvas.Left>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Canvas.Left>
						<Rectangle.Width>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="RangeWidthControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Rectangle.Width>
						<Rectangle.Height>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="BottomHeightControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Rectangle.Height>
						<Canvas.Top>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Canvas.Top>
					</Rectangle>

					<!--#endregion Masks-->

					<!--  Center rectangle (Move rect)  -->
					<Rectangle
						x:Name="CenterRectangle"
						Cursor="ScrollAll"
						Fill="Transparent"
						MouseDown="OnLineMouseDown">
						<Canvas.Top>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Canvas.Top>
						<Canvas.Left>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Canvas.Left>
						<Rectangle.Height>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="RangeHeightControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Rectangle.Height>
						<Rectangle.Width>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="RangeWidthControl"
									Path="Tag" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Rectangle.Width>
					</Rectangle>

					<Line
						x:Name="LeftBorder"
						Cursor="SizeWE"
						MouseDown="OnLineMouseDown"
						SnapsToDevicePixels="False"
						Stroke="Red"
						StrokeThickness="2">
						<Line.X1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X1>
						<Line.X2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X2>
						<Line.Y1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y1>
						<Line.Y2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y2>
					</Line>
					<Line
						x:Name="TopBorder"
						Cursor="SizeNS"
						MouseDown="OnLineMouseDown"
						SnapsToDevicePixels="False"
						Stroke="Red"
						StrokeThickness="2">
						<Line.X1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X1>
						<Line.X2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X2>
						<Line.Y1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y1>
						<Line.Y2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y2>
					</Line>
					<Line
						x:Name="RightBorder"
						Cursor="SizeWE"
						MouseDown="OnLineMouseDown"
						SnapsToDevicePixels="False"
						Stroke="Red"
						StrokeThickness="2">
						<Line.X1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X1>
						<Line.X2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X2>
						<Line.Y1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y1>
						<Line.Y2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y2>
					</Line>
					<Line
						x:Name="BottomBorder"
						Cursor="SizeNS"
						MouseDown="OnLineMouseDown"
						SnapsToDevicePixels="False"
						Stroke="Red"
						StrokeThickness="2">
						<Line.X1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="StartPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X1>
						<Line.X2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointX" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualWidth" />
							</MultiBinding>
						</Line.X2>
						<Line.Y1>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y1>
						<Line.Y2>
							<MultiBinding Converter="{StaticResource DoubleMultiplyMultiConverter}">
								<Binding
									ElementName="UserControl"
									Path="EndPointY" />
								<Binding
									ElementName="ViewFinderCanvas"
									Path="ActualHeight" />
							</MultiBinding>
						</Line.Y2>
					</Line>
				</Canvas>
			</Grid>
		</Border>


	</DockPanel>
</UserControl>
