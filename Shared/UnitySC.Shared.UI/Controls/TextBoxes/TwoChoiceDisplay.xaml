<UserControl x:Class="UnitySC.Shared.UI.Controls.TwoChoiceDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnitySC.Shared.UI.Controls"
             xmlns:sharedExtensions="clr-namespace:UnitySC.Shared.UI.Extensions"
             xmlns:sharedControls="clr-namespace:UnitySC.Shared.UI.Controls;assembly=UnitySC.Shared.UI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:controls="clr-namespace:UnitySC.Shared.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="TwoChoiceDisplayUserControl">

    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBlock Text="{Binding Label,ElementName=TwoChoiceDisplayUserControl}" VerticalAlignment="Center" Margin="0,0,20,0" />
        
    </StackPanel>
</UserControl>
