<Window
    x:Class="UnitySC.Beckhoff.Emulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:palette="clr-namespace:UnitySC.Beckhoff.Emulator.Palette"
    Title="UnitySC.Beckhoff.Emulator"
    Width="1024"
    Height="768"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Icon="Icons\agileo.ico"
    ResizeMode="CanResizeWithGrip"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TabControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            TabStripPlacement="Bottom">

            <TabItem
                Background="{DynamicResource PrimaryHueMidBrush}"
                Foreground="{DynamicResource MaterialDesignBody}"
                Header="Exchange table">
                <ContentPresenter
                    Name="MdbViewer"
                    Margin="1"
                    Content="{Binding InnerContent}"
                    TextElement.Foreground="{DynamicResource MaterialDesignBody}" />
            </TabItem>

            <TabItem
                Name="TiPalette"
                Padding="15,10,15,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{DynamicResource PrimaryHueMidBrush}"
                Foreground="{DynamicResource MaterialDesignBody}"
                Header="Palette">
                <palette:PaletteSelector x:Name="Palette" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" />
            </TabItem>

        </TabControl>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="5,0,5,0"
            Header="Simulator Communication State">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Path=ClientConnected}"
                TextWrapping="Wrap" />
        </GroupBox>

        <GroupBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5,0,5,0"
            Header="Simulator Current State">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Path=CurrentState}"
                TextWrapping="Wrap" />
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Grid.ColumnSpan="2" Grid.Column="0"
            Margin="5,0,5,0"
            Header="Trace">
            <ListBox
                x:Name="TraceScreen"
                Margin="5"
                Foreground="{DynamicResource MaterialDesignBody}"
                ScrollViewer.IsDeferredScrollingEnabled="True"
                SelectionChanged="lbOutputs_SelectionChanged"
                SelectionMode="Single">
                <ListBox.InputBindings>
                    <KeyBinding
                        Key="A"
                        Command="ApplicationCommands.SelectAll"
                        Modifiers="Ctrl" />
                </ListBox.InputBindings>
            </ListBox>
        </GroupBox>
    </Grid>
</Window>
