<UserControl
    x:Class="UnitySC.Equipment.Devices.Controller.Simulation.ControllerSimulationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1020"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Controller">
            <UniformGrid Columns="3">
                <StackPanel Margin="10">

                    <GroupBox
                        Margin="0,0,0,10"
                        BorderThickness="1,1,1,1"
                        Header="Connect">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Button
                                x:Name="ConnectBtn"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Click="ConnectBtn_Click"
                                Content="Connect all devices" />
                        </Grid>
                    </GroupBox>

                    <GroupBox
                        Margin="0,0,0,10"
                        BorderThickness="1,1,1,1"
                        Header="Init activity">
                        <Grid
                            Height="Auto"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Is Cold Initialization" />
                            <CheckBox
                                x:Name="IsColdInitChk"
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content=""
                                IsChecked="{Binding ControllerSimulationViewModel.IsColdInitChecked, Mode=OneWayToSource}" />
                            <Button
                                x:Name="StartInitActivityBtn"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Click="StartInitActivityBtn_Click"
                                Content="Start activity" />
                        </Grid>
                    </GroupBox>

                    <GroupBox BorderThickness="1,1,1,1" Header="Clear activity">
                        <Grid
                            Height="Auto"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Button
                                x:Name="StartClearActivityBtn"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Click="StartClearActivityBtn_Click"
                                Content="Start activity" />
                        </Grid>
                    </GroupBox>

                </StackPanel>

                <GroupBox
                    Margin="10"
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    Header="Load PM activity">
                    <Grid
                        Height="Auto"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Load Port" />
                        <ComboBox
                            x:Name="LpaLoadPortCmb"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            SelectionChanged="LpaLoadPortCmb_SelectionChanged" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Source slot" />
                        <ComboBox
                            x:Name="LpaSourceSlotCmb"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Robot arm" />
                        <ComboBox
                            x:Name="LpaRobotArmCmb"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Align angle (Â°C)" />
                        <TextBox
                            x:Name="LpaAngleTb"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            PreviewTextInput="LpaAngleTb_PreviewTextInput" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Align Type" />
                        <ComboBox
                            x:Name="LpaAlignTypeCmb"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Effector Type" />
                        <ComboBox
                            x:Name="LpaEffectorTypeCmb"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Process Module" />
                        <ComboBox
                            x:Name="LpaProcessModuleCmb"
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Button
                            x:Name="StartLoadPmActivityBtn"
                            Grid.Row="7"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Click="StartLoadPmActivityBtn_Click"
                            Content="Start activity" />
                    </Grid>
                </GroupBox>

                <StackPanel Margin="10">
                    <GroupBox
                    Margin="10"
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    Header="Unload PM activity">
                    <Grid
                        Height="Auto"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Process Module" />
                        <ComboBox
                            x:Name="UpaProcessModuleCmb"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Robot Arm" />
                        <ComboBox
                            x:Name="UpaRobotArmCmb"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Load Port" />
                        <ComboBox
                            x:Name="UpaLoadPortCmb"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            SelectionChanged="UpaLoadPortCmb_SelectionChanged" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Destination slot" />
                        <ComboBox
                            x:Name="UpaDestinationSlotCmb"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Effector Type" />
                        <ComboBox
                            x:Name="LpuEffectorTypeCmb"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Button
                            x:Name="StartUnloadPmActivityBtn"
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Click="StartUnloadPmActivityBtn_Click"
                            Content="Start activity" />
                    </Grid>
                </GroupBox>

                <GroupBox
                    Margin="10"
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    Header="Simulation Speed">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider
                                x:Name="SimulationSpeedSlider"
                                Grid.Column="0"
                                Minimum="1" Maximum="1000" SmallChange="10" LargeChange="25" Value="100"
                                ValueChanged="RangeBase_OnValueChanged"/>
                            <Label
                                x:Name="SimulationSpeedLb"
                                Grid.Column="1"
                                Margin="10,-4,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Content="100 %"/>
                        </Grid>
                        <Button Content="Reset" Click="ResetSimulationSpeed_OnClick"/>
                    </StackPanel>
                </GroupBox>
                </StackPanel>

            </UniformGrid>
        </TabItem>
        <TabItem Header="Alarms" Visibility="{Binding IsDeviceWithAlarms, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ContentControl Content="{Binding AlarmSimulationUserControl}" />
        </TabItem>
    </TabControl>
</UserControl>
