<UserControl
    x:Class="UnitySC.GUI.Common.Vendor.Views.Panels.Help.Develop.Controls.CustomControlsPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.XamlResources.Shared"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.Controls"
    xmlns:markupExtensions="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.MarkupExtensions"
    xmlns:behaviors="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.Behaviors"
    xmlns:numericBox="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.Controls.NumericBox"
    xmlns:colorPicker="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.UserControls.ColorPicker"
    xmlns:controlsPanel="clr-namespace:UnitySC.GUI.Common.Vendor.Views.Panels.Help.Develop.Controls"
    x:Name="UserControl"
    d:DataContext="{d:DesignInstance controlsPanel:CustomControlsPanel, IsDesignTimeCreatable=False}"
    d:DesignWidth="{StaticResource DesignWidth}"
    Style="{StaticResource BusinessPanelViewStyle}"
    mc:Ignorable="d">
    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">

        <StackPanel Orientation="Vertical">

            <GroupBox Header="Cards">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="A Card is a container whose role is to display content and actions on a single topic." />
                        <LineBreak />
                        <Run Text="The elements contained must be placed on the cards in such a way as to clearly indicate the hierarchy." />
                    </TextBlock>
                    <UniformGrid Columns="4">
                        <GroupBox Header="A Card with default elevated style">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevated" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with filled style">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                Style="{StaticResource FilledCardStyle}">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Filled" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with outlined style">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                Style="{StaticResource OutlinedCardStyle}">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Outlined" />
                            </controls:Card>
                        </GroupBox>
                    </UniformGrid>
                    <UniformGrid Columns="4">
                        <GroupBox Header="A Card with elevation 0">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level0">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 0" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with elevation 1">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level1">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 1" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with elevation 2">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level2">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 2" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with elevation 3">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level3">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 3" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with elevation 4">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level4">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 4" />
                            </controls:Card>
                        </GroupBox>
                        <GroupBox Header="A Card with elevation 5">
                            <controls:Card
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                BorderThickness="0"
                                Elevation="Level5">
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    Text="Elevation 5" />
                            </controls:Card>
                        </GroupBox>
                    </UniformGrid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Date and Time">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="TimePicker">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:TimePicker
                                Width="140"
                                HorizontalAlignment="Left" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="DateDisplayer">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:DateDisplayer
                                Width="300"
                                HorizontalAlignment="Left" />
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="ButtonsBox">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="A ButtonsBox with its ItemsSource set">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:ButtonsBox
                                Width="140"
                                HorizontalAlignment="Left"
                                markupExtensions:Icon.Geometry="{StaticResource ShowIcon}"
                                Content="Visibility"
                                ItemsSource="{markupExtensions:EnumCollection {x:Type Visibility}}">
                                <controls:ButtonsBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalContentAlignment="Left"
                                            Background="Transparent"
                                            Content="{Binding}" />
                                    </DataTemplate>
                                </controls:ButtonsBox.ItemTemplate>
                            </controls:ButtonsBox>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="A ButtonsBox with inline defined elements">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:ButtonsBox
                                Width="140"
                                HorizontalAlignment="Left"
                                Content="Edit">
                                <Button
                                    HorizontalContentAlignment="Left"
                                    markupExtensions:Icon.Geometry="{StaticResource CutIcon}"
                                    Background="Transparent"
                                    Content="Cut" />
                                <Button
                                    HorizontalContentAlignment="Left"
                                    markupExtensions:Icon.Geometry="{StaticResource CopyIcon}"
                                    Background="Transparent"
                                    Content="Copy" />
                                <Button
                                    HorizontalContentAlignment="Left"
                                    markupExtensions:Icon.Geometry="{StaticResource PasteIcon}"
                                    Background="Transparent"
                                    Content="Paste" />
                                <Button
                                    HorizontalContentAlignment="Left"
                                    markupExtensions:Icon.Geometry="{StaticResource DeleteIcon}"
                                    Background="Transparent"
                                    Content="Delete" />
                                <Button
                                    HorizontalContentAlignment="Left"
                                    markupExtensions:Icon.Geometry="{StaticResource DuplicateIcon}"
                                    Background="Transparent"
                                    Content="Duplicate" />
                            </controls:ButtonsBox>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="CircularProgressBar">
                <GroupBox Header="Indeterminate circular progress bar">
                    <controls:Card
                        Padding="20"
                        Style="{StaticResource FilledCardStyle}">
                        <controls:CircularProgressBar
                            HorizontalAlignment="Left"
                            IsIndeterminate="True" />
                    </controls:Card>
                </GroupBox>
            </GroupBox>

            <GroupBox Header="AdvancedTabControl">
                <StackPanel Orientation="Vertical">

                    <GroupBox Header="An AdvancedTabControl with its ItemsSource set">
                        <controls:Card Style="{StaticResource FilledCardStyle}">
                            <controls:AdvancedTabControl ItemsSource="{markupExtensions:EnumCollection {x:Type Visibility}}">
                                <controls:AdvancedTabControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="0,20"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding}" />
                                    </DataTemplate>
                                </controls:AdvancedTabControl.ItemTemplate>
                                <controls:AdvancedTabControl.HeaderItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </controls:AdvancedTabControl.HeaderItemTemplate>
                            </controls:AdvancedTabControl>
                        </controls:Card>
                    </GroupBox>

                    <GroupBox Header="An AdvancedTabControl with inline defined elements">
                        <DockPanel>
                            <controls:Card
                                Margin="20,0,0,0"
                                DockPanel.Dock="Right"
                                Style="{StaticResource FilledCardStyle}">
                                <StackPanel
                                    Margin="10"
                                    Orientation="Vertical">
                                    <CheckBox
                                        Margin="{behaviors:MarginAssist Bottom={StaticResource PanelMargin}}"
                                        Content="'All' is visible"
                                        IsChecked="{Binding ElementName=AllAdvancedTabItem, Path=IsShown}" />
                                    <CheckBox
                                        Margin="{behaviors:MarginAssist Bottom={StaticResource PanelMargin}}"
                                        Content="'Unread' is visible"
                                        IsChecked="{Binding ElementName=UnreadAdvancedTabItem, Path=IsShown}" />
                                    <CheckBox
                                        Margin="{behaviors:MarginAssist Bottom={StaticResource PanelMargin}}"
                                        Content="'Flagged' is visible"
                                        IsChecked="{Binding ElementName=FlaggedAdvancedTabItem, Path=IsShown}" />
                                    <CheckBox
                                        Content="'Urgent' is visible"
                                        IsChecked="{Binding ElementName=UrgentAdvancedTabItem, Path=IsShown}" />
                                </StackPanel>
                            </controls:Card>
                            <controls:Card Style="{StaticResource FilledCardStyle}">
                                <controls:AdvancedTabControl>
                                    <controls:AdvancedTabItem
                                        x:Name="AllAdvancedTabItem"
                                        Header="All"
                                        IsShown="True">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="All content" />
                                    </controls:AdvancedTabItem>
                                    <controls:AdvancedTabItem
                                        x:Name="UnreadAdvancedTabItem"
                                        Header="Unread"
                                        IsShown="True">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Unread content" />
                                    </controls:AdvancedTabItem>
                                    <controls:AdvancedTabItem
                                        x:Name="FlaggedAdvancedTabItem"
                                        Header="Flagged"
                                        IsShown="True">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Flagged content" />
                                    </controls:AdvancedTabItem>
                                    <controls:AdvancedTabItem
                                        x:Name="UrgentAdvancedTabItem"
                                        Header="Urgent"
                                        IsShown="True">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Urgent content" />
                                    </controls:AdvancedTabItem>
                                </controls:AdvancedTabControl>
                            </controls:Card>
                        </DockPanel>
                    </GroupBox>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="ChipsSelector">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="A ChipsSelector with its ItemsSource set">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:ChipsSelector ItemsSource="{markupExtensions:EnumCollection {x:Type Visibility}}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="Independent Chips with progress status">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Horizontal">
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    Content="Activated"
                                    IsActivated="True" />
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    Content="Deactivated"
                                    IsActivated="False" />
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    Content="Action in progress"
                                    IsActivated="True"
                                    IsInProgress="True" />
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    Content="Deactivated in progress"
                                    IsActivated="False"
                                    IsInProgress="True" />
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    Content="Removable"
                                    ShowRemoveIcon="True" />
                                <controls:Chips
                                    Margin="{behaviors:MarginAssist Right=10}"
                                    markupExtensions:Icon.Geometry="{StaticResource AgileoIcon}"
                                    Content="Iconified" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="CustomSlider">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="A CustomSlider with its ItemsSource set with a TextTickItem collection">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:CustomSlider
                                Width="300"
                                Margin="30,0"
                                HorizontalAlignment="Left"
                                IsSnapToTickEnabled="True">
                                <controls:CustomSlider.TickSource>
                                    <x:Array Type="{x:Type controls:TextTickItem}">
                                        <controls:TextTickItem
                                            Text="Success"
                                            Value="0" />
                                        <controls:TextTickItem
                                            Text="Warning"
                                            Value="1" />
                                        <controls:TextTickItem
                                            Text="Error"
                                            Value="2" />
                                    </x:Array>
                                </controls:CustomSlider.TickSource>
                                <controls:CustomSlider.TickTemplate>
                                    <DataTemplate DataType="{x:Type controls:TextTickItem}">
                                        <StackPanel Orientation="Horizontal">
                                            <controls:Icon
                                                x:Name="Icon"
                                                Margin="0,0,7,0" />
                                            <TextBlock
                                                x:Name="TextBlock"
                                                VerticalAlignment="Bottom"
                                                Text="{Binding Text}" />
                                        </StackPanel>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Value}" Value="0">
                                                <Setter TargetName="TextBlock" Property="Foreground" Value="{StaticResource SeveritySuccessBrush}" />
                                                <Setter TargetName="Icon" Property="Data" Value="{StaticResource CheckedIcon}" />
                                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource SeveritySuccessBrush}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value}" Value="1">
                                                <Setter TargetName="TextBlock" Property="Foreground" Value="{StaticResource SeverityWarningBrush}" />
                                                <Setter TargetName="Icon" Property="Data" Value="{StaticResource AbortIcon}" />
                                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource SeverityWarningBrush}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value}" Value="2">
                                                <Setter TargetName="TextBlock" Property="Foreground" Value="{StaticResource SeverityErrorBrush}" />
                                                <Setter TargetName="Icon" Property="Data" Value="{StaticResource CautionIcon}" />
                                                <Setter TargetName="Icon" Property="Foreground" Value="{StaticResource SeverityErrorBrush}" />
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </controls:CustomSlider.TickTemplate>
                            </controls:CustomSlider>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Displayer">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Horizontal">
                                <controls:Displayer
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    Value="Default" />
                                <controls:Displayer
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    Color="Blue"
                                    Value="Colored" />
                                <controls:Displayer
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    Icon="{StaticResource AgileoIcon}"
                                    Color="Orange"
                                    Value="Iconified" />
                                <controls:Displayer
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    CommandIcon="{StaticResource UserInterfaceControlIcon}"
                                    Color="Red"
                                    Value="Clickable" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="NumericBox">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="The NumericBoxes allows editing of primitive type values. This value can be incremented and decremented using the up and down arrows on the keyboard or the mouse wheel." />
                        <LineBreak />
                        <Run Text="The increment value can be configured." />
                    </TextBlock>
                    <GroupBox Header="NumericBox for double (DoubleBox)">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Horizontal">
                                <numericBox:DoubleBox
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    Value="124.5" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="NumericBox for double (DoubleBox) with StringFormat">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Vertical">
                                <numericBox:DoubleBox
                                    Width="200"
                                    Margin="{behaviors:MarginAssist Right={StaticResource PanelMargin}}"
                                    HorizontalAlignment="Left"
                                    Increment="0.5"
                                    StringFormat="0.000 â‚¬"
                                    Value="132.5" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="NumericBox for double (DoubleBox) with default value">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="{behaviors:MarginAssist Bottom={StaticResource PanelMargin}}"
                                    Text="The default value is reapplied when the user deletes the contents of the DoubleBox." />
                                <numericBox:DoubleBox
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    DefaultValue="100"
                                    Value="100" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Numeric inputs">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="This is the list of all numeric input controls." />
                        <LineBreak />
                        <Run Text="These controls have a built-in value conversion error check, and also accept rules to fine control the user input." />
                    </TextBlock>
                    <GroupBox Header="UIntBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:UIntBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="56" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="IntBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:IntBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="32" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="UShortBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:UShortBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="42" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="ULongBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:ULongBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="1232" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="LongBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:ULongBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="56362" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="DecimalBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:ULongBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="12" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="ByteBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <numericBox:ULongBox
                                Width="200"
                                HorizontalAlignment="Left"
                                Value="6" />
                        </controls:Card>
                    </GroupBox>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="UnitsNet">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="The UnitsNet control allows editing of UnitsNet type values." />
                    </TextBlock>
                    <GroupBox Header="An UnitsNet control for a Frequency quantity">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <DockPanel LastChildFill="False">
                                <controls:UnitsNet
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsUnitFixed="{Binding ElementName=UnitNetCheckBox, Path=IsChecked}"
                                    Quantity="{Binding Frequency}"
                                    UnitWidth="80" />
                                <CheckBox
                                    x:Name="UnitNetCheckBox"
                                    Content="Is unit fixed"
                                    DockPanel.Dock="Right" />
                            </DockPanel>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="A LocalizedUnitsNet control for a Frequency quantity">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="{StaticResource HorizontalStackPropertyMargin}">
                                    <Run Text="The LocalizableUnitsNet control uses the application's current culture to format the displayed value." />
                                </TextBlock>
                                <controls:LocalizedUnitsNet
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Quantity="{Binding Frequency}"
                                    UnitWidth="80" />
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="PathBox">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="The PathBox allows the editing of a field as well as the use of an access button linked to a command defined by the integrator." />
                    </TextBlock>
                    <GroupBox Header="File PathBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:PathBox
                                Width="300"
                                HorizontalAlignment="Left"
                                Path="C:\Agileo\MyFile.txt" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="Folder PathBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:PathBox
                                Width="300"
                                HorizontalAlignment="Left"
                                Path="C:\Agileo\MyFolder"
                                PathType="Folder" />
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="VisiblePasswordBox">
                <GroupBox Header="Default VisiblePasswordBox">
                    <controls:Card
                        Padding="20"
                        Style="{StaticResource FilledCardStyle}">
                        <controls:VisiblePasswordBox
                            Width="200"
                            HorizontalAlignment="Left"
                            VisualizePasswordButtonIsEnabled="True" />
                    </controls:Card>
                </GroupBox>
            </GroupBox>

            <GroupBox Header="FilterBox">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="Default FilterBox">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Horizontal">
                                <controls:FilterBox
                                    Title="Value"
                                    Width="200"
                                    SelectedItems="{Binding SelectedIntStrings}">
                                    <controls:FilterBox.ItemsSource>
                                        <x:Array Type="{x:Type system:String}">
                                            <system:String>1</system:String>
                                            <system:String>2</system:String>
                                            <system:String>3</system:String>
                                        </x:Array>
                                    </controls:FilterBox.ItemsSource>
                                </controls:FilterBox>
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="FilterBox with customized templates">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <StackPanel Orientation="Horizontal">
                                <controls:FilterBox
                                    Title="Color"
                                    Width="200"
                                    SelectedItems="{Binding SelectedColorStrings}">
                                    <controls:FilterBox.ItemsSource>
                                        <x:Array Type="{x:Type system:String}">
                                            <system:String>Red</system:String>
                                            <system:String>Blue</system:String>
                                            <system:String>Green</system:String>
                                        </x:Array>
                                    </controls:FilterBox.ItemsSource>
                                    <controls:FilterBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                x:Name="TextBlock"
                                                IsHitTestVisible="False"
                                                Text="{Binding}" />
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding}" Value="Red">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeverityErrorBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="Blue">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeverityInformationBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="Green">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeveritySuccessBrush}" />
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </controls:FilterBox.ItemTemplate>
                                    <controls:FilterBox.SelectedItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <Path
                                                    Height="10"
                                                    Margin="5,0"
                                                    Data="{StaticResource CloseIcon}"
                                                    DockPanel.Dock="Right"
                                                    Fill="{Binding ElementName=TextBlock, Path=Foreground}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Name="TextBlock"
                                                    Margin="5,0"
                                                    Padding="0,0,0,4"
                                                    VerticalAlignment="Center"
                                                    IsHitTestVisible="True"
                                                    Text="{Binding}"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" />
                                            </DockPanel>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding}" Value="Red">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeverityErrorBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="Blue">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeverityInformationBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding}" Value="Green">
                                                    <Setter TargetName="TextBlock" Property="Foreground" Value="{DynamicResource SeveritySuccessBrush}" />
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </controls:FilterBox.SelectedItemTemplate>
                                </controls:FilterBox>
                            </StackPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Icon">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="An Icon with default size and color">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:Icon
                                HorizontalAlignment="Left"
                                Data="{StaticResource AgileoIcon}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="An Icon with customzed size and color">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:Icon
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                Data="{StaticResource AgileoIcon}"
                                Foreground="{DynamicResource SeverityWarningBrush}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="An Icon with circled style">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:Icon
                                Width="30"
                                Height="30"
                                Padding="4"
                                HorizontalAlignment="Left"
                                Data="{StaticResource AgileoIcon}"
                                Style="{StaticResource CircledIconStyle}" />
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Led">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="Default Led">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <DockPanel LastChildFill="False">
                                <controls:Led
                                    HorizontalAlignment="Left"
                                    IsActivated="{Binding ElementName=LedCheckBox, Path=IsChecked}" />
                                <CheckBox
                                    x:Name="LedCheckBox"
                                    Content="Is activated"
                                    DockPanel.Dock="Right" />
                            </DockPanel>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="Custom colored Led">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <DockPanel LastChildFill="False">
                                <controls:Led
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource SeverityErrorBrush}"
                                    Foreground="{DynamicResource SeverityInformationBrush}"
                                    IsActivated="{Binding ElementName=Led2CheckBox, Path=IsChecked}" />
                                <CheckBox
                                    x:Name="Led2CheckBox"
                                    Content="Is activated"
                                    DockPanel.Dock="Right" />
                            </DockPanel>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="OverlayContentControl">
                <StackPanel
                    Margin="20,0"
                    Orientation="Vertical">
                    <TextBlock Margin="{StaticResource HorizontalStackPropertyMargin}">
                        <Run Text="The OverlayContentControl displays the content of its overlay when the user hovers the mouse over its content." />
                    </TextBlock>
                    <controls:Card
                        Padding="20"
                        Style="{StaticResource FilledCardStyle}">
                        <controls:OverlayedContentControl>
                            <controls:OverlayedContentControl.Overlay>
                                <Border
                                    Height="100"
                                    Background="{DynamicResource BackgroundMaskBrush}"
                                    CornerRadius="5">
                                    <controls:Icon
                                        Width="50"
                                        Height="50"
                                        Margin="20"
                                        HorizontalAlignment="Left"
                                        Data="{StaticResource AgileoIcon}" />
                                </Border>
                            </controls:OverlayedContentControl.Overlay>
                            <Border
                                Height="100"
                                BorderBrush="{DynamicResource ListViewBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="Overlay area" />
                            </Border>
                        </controls:OverlayedContentControl>
                    </controls:Card>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="PropertyEditor">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="The PropertyEditor formats its title and its content in order to keep a graphic homogeneity in the application." />
                    </TextBlock>
                    <GroupBox Header="A default PropertyEditor">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:PropertyEditor
                                HorizontalAlignment="Left"
                                PropertyName="Name">
                                <TextBox
                                    Width="200"
                                    Text="Content" />
                            </controls:PropertyEditor>
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="A PropertyEditor with description">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:PropertyEditor
                                HorizontalAlignment="Left"
                                PropertyDescription="Description"
                                PropertyName="Name">
                                <TextBox
                                    Width="200"
                                    Text="Content" />
                            </controls:PropertyEditor>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="ColorPickers">
                <StackPanel Orientation="Vertical">
                    <!--<TextBlock>
                        <Run Text="The PropertyEditor formats its title and its content in order to keep a graphic homogeneity in the application." />
                    </TextBlock>-->
                    <GroupBox Header="SquarePicker">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <colorPicker:SquarePicker
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                SelectedColor="{Binding Source={x:Static shared:Brushes.HighlightBrush}, Path=Color, Mode=OneWay}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="ColorSliders">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <colorPicker:ColorSliders
                                Width="300"
                                HorizontalAlignment="Left"
                                SelectedColor="{Binding Source={x:Static shared:Brushes.HighlightBrush}, Path=Color, Mode=OneWay}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="ColorPicker">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <colorPicker:ColorPicker
                                Width="300"
                                HorizontalAlignment="Left"
                                SelectedColor="{Binding Source={x:Static shared:Brushes.HighlightBrush}, Path=Color, Mode=OneWay}" />
                        </controls:Card>
                    </GroupBox>
                    <GroupBox Header="ContextualColorPicker">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <colorPicker:ContextualColorPicker
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                SelectedColor="{Binding Source={x:Static shared:Brushes.HighlightBrush}, Path=Color, Mode=OneWay}" />
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="UniformColumnItemsControl">
                <StackPanel Orientation="Vertical">
                    <TextBlock>
                        <Run Text="The UniformColumnItemsControl displays its contents as columns and automatically adds browse buttons if the number of items is greater than the number of columns." />
                    </TextBlock>
                    <GroupBox Header="A UniformColumnItemsControl with 5 items and 3 columns">
                        <controls:Card
                            Padding="20"
                            Style="{StaticResource FilledCardStyle}">
                            <controls:UniformColumnItemsControl
                                Height="200"
                                HorizontalAlignment="Stretch"
                                Columns="3">
                                <Border Background="{DynamicResource BusinessPanelBackground}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="A" />
                                </Border>
                                <Border Background="{DynamicResource BusinessPanelBackground}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="B" />
                                </Border>
                                <Border Background="{DynamicResource BusinessPanelBackground}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="C" />
                                </Border>
                                <Border Background="{DynamicResource BusinessPanelBackground}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="D" />
                                </Border>
                                <Border Background="{DynamicResource BusinessPanelBackground}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="E" />
                                </Border>
                            </controls:UniformColumnItemsControl>
                        </controls:Card>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

        </StackPanel>

    </ScrollViewer>
</UserControl>

