<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <DropShadowEffect
        x:Key="E95ElementsShadow"
        BlurRadius="10"
        Direction="0"
        Opacity="0.3"
        RenderingBias="Performance"
        ShadowDepth="0"
        Color="Black" />

    <DropShadowEffect
        x:Key="E95DialogsShadow"
        BlurRadius="24"
        Direction="0"
        Opacity="0.3"
        RenderingBias="Performance"
        ShadowDepth="0"
        Color="Black" />

    <DropShadowEffect
        x:Key="ThinControlsShadow"
        BlurRadius="2"
        Direction="-90"
        Opacity="0.3"
        RenderingBias="Performance"
        ShadowDepth="0.5"
        Color="Black" />

    <DropShadowEffect
        x:Key="ControlsShadow"
        BlurRadius="5"
        Direction="-90"
        Opacity="0.3"
        RenderingBias="Performance"
        ShadowDepth="1"
        Color="Black" />

    <DropShadowEffect
        x:Key="PressedControlsShadow"
        BlurRadius="10"
        Direction="-90"
        Opacity="0.3"
        RenderingBias="Performance"
        ShadowDepth="5"
        Color="Black" />

</ResourceDictionary>
