<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundMaskBrush" Color="{DynamicResource BackgroundMask}" />

    <SolidColorBrush x:Key="HighlightBrush" Color="{DynamicResource SelectionForeground}" />
    <SolidColorBrush x:Key="SelectionForegroundBrush" Color="{DynamicResource SelectionForeground}" />
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{DynamicResource SelectionBackground}" />

    <!--#region Severity-->
    <SolidColorBrush x:Key="SeverityErrorBrush" Color="{DynamicResource RedColor}" />
    <SolidColorBrush x:Key="SeverityInformationBrush" Color="{DynamicResource BlueColor}" />
    <SolidColorBrush x:Key="SeverityWarningBrush" Color="{DynamicResource OrangeColor}" />
    <SolidColorBrush x:Key="SeveritySuccessBrush" Color="{DynamicResource GreenColor}" />
    <SolidColorBrush
        x:Key="SeverityErrorBackgroundBrush"
        Opacity="{StaticResource DisabledOpacity}"
        Color="{DynamicResource RedColor}" />
    <SolidColorBrush
        x:Key="SeverityInformationBackgroundBrush"
        Opacity="{StaticResource DisabledOpacity}"
        Color="{DynamicResource BlueColor}" />
    <SolidColorBrush
        x:Key="SeverityWarningBackgroundBrush"
        Opacity="{StaticResource DisabledOpacity}"
        Color="{DynamicResource OrangeColor}" />
    <SolidColorBrush
        x:Key="SeveritySuccessBackgroundBrush"
        Opacity="{StaticResource DisabledOpacity}"
        Color="{DynamicResource GreenColor}" />
    <!--#endregion Severity-->

    <!--  WaferStates colors  -->
    <SolidColorBrush
        x:Key="WaferStatusNoneBrush"
        Opacity="0.7"
        Color="{DynamicResource PanelForeground}" />
    <SolidColorBrush x:Key="WaferStatusProcessedBrush" Color="{DynamicResource LightGreenColor}" />
    <SolidColorBrush x:Key="WaferStatusWaitingProcessBrush" Color="{DynamicResource DarkBlueColor}" />
    <SolidColorBrush x:Key="WaferStatusProcessingBrush" Color="{DynamicResource LightBlueColor}" />
    <SolidColorBrush x:Key="WaferStatusProcessingFailedBrush" Color="{DynamicResource RedColor}" />
    <SolidColorBrush x:Key="WaferStatusProcessingAbortedBrush" Color="{DynamicResource OrangeColor}" />

    <SolidColorBrush x:Key="SelectionLocationDestinationArrowBrush" Color="{DynamicResource DeepPurpleColor}" />
    <SolidColorBrush x:Key="SelectionLocationSourceArrowBrush" Color="{DynamicResource CyanColor}" />

    <SolidColorBrush
        x:Key="SelectionStateDestinationBackgroundBrush"
        Opacity="0.2"
        Color="{DynamicResource DeepPurpleColor}" />
    <SolidColorBrush
        x:Key="SelectionStateSourceBackgroundBrush"
        Opacity="0.2"
        Color="{DynamicResource CyanColor}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource PanelBackground}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{DynamicResource PanelForeground}" />
</ResourceDictionary>
