<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:agileoGui="clr-namespace:Agileo.GUI.Components.LoginPopup;assembly=Agileo.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loginPopup="clr-namespace:UnitySC.GUI.Common.Vendor.Views.LoginPopup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--#region DataTemplate-->
    <DataTemplate DataType="{x:Type agileoGui:LogInPopup}">
        <loginPopup:SampleLoginPopupView />
    </DataTemplate>
    <!--#endregion DataTemplate-->

    <!--#region Menu bar-->
    <SolidColorBrush x:Key="LogonWindowMenuBarBackground" Color="{DynamicResource PanelBackground}" />
    <SolidColorBrush x:Key="LogonWindowMenuBarTopBorderFill" Color="{DynamicResource SelectionForeground}" />
    <SolidColorBrush x:Key="LogonWindowMenuBarForeground" Color="{DynamicResource PanelForeground}" />
    <!--#endregion Menu bar-->

    <!--#region Close button-->
    <SolidColorBrush x:Key="LogonWindowCloseButtonForeground" Color="{DynamicResource SelectionBackground}" />
    <!--#endregion Close button-->

    <!--#region Logon View-->

    <SolidColorBrush x:Key="LogonWindowBackground" Color="{DynamicResource PanelBackground}" />
    <SolidColorBrush x:Key="LogonWindowHeaderBackground" Color="{DynamicResource SelectionBackground}" />
    <SolidColorBrush x:Key="LogonWindowHeaderForeground" Color="{DynamicResource SelectionForeground}" />
    <SolidColorBrush
        x:Key="LogonWindowBorderbrush"
        Opacity="{StaticResource DisabledOpacity}"
        Color="{DynamicResource PanelForeground}" />
    <SolidColorBrush x:Key="LogonWindowIconColor" Color="{DynamicResource SelectionForeground}" />

    <!--#region Log in/out button-->

    <!--#endregion Log in/out button-->
    <SolidColorBrush x:Key="LogonWindowLogButtonForeground" Color="{DynamicResource SelectionBackground}" />
    <!--#endregion Logon View-->

    <!--#region ShutDown button-->
    <SolidColorBrush x:Key="LogonWindowShutdownButtonForeground" Color="White" />
    <!--#endregion ShutDown button-->

</ResourceDictionary>
