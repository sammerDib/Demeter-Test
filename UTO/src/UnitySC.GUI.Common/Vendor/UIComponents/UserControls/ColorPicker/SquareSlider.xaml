<UserControl
    x:Class="UnitySC.GUI.Common.Vendor.UIComponents.UserControls.ColorPicker.SquareSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserControl"
    d:DesignHeight="400"
    d:DesignWidth="400"
    x:ClassModifier="internal"
    mc:Ignorable="d">
    <Grid
        MouseDown="OnMouseDown"
        MouseMove="OnMouseMove"
        MouseUp="OnMouseUp">

        <Border
            Width="{Binding ElementName=UserControl, Path=Width}"
            Height="{Binding ElementName=UserControl, Path=Height}"
            CornerRadius="5">
            <Border.Background>
                <ImageBrush
                    ImageSource="{Binding ElementName=UserControl, Path=GradientBitmap}"
                    Stretch="Fill" />
            </Border.Background>
        </Border>

        <Canvas Background="Transparent">
            <Grid>
                <Canvas.Left>
                    <MultiBinding Converter="{StaticResource ProportionalMultiConverter}">
                        <Binding
                            ElementName="UserControl"
                            Path="ActualWidth" />
                        <Binding
                            ElementName="UserControl"
                            Path="HeadX" />
                        <Binding
                            ElementName="UserControl"
                            Path="RangeX" />
                    </MultiBinding>
                </Canvas.Left>
                <Canvas.Bottom>
                    <MultiBinding Converter="{StaticResource ProportionalMultiConverter}">
                        <Binding
                            ElementName="UserControl"
                            Path="ActualHeight" />
                        <Binding
                            ElementName="UserControl"
                            Path="HeadY" />
                        <Binding
                            ElementName="UserControl"
                            Path="RangeY" />
                    </MultiBinding>
                </Canvas.Bottom>
                <Grid.RenderTransform>
                    <TranslateTransform
                        X="-6"
                        Y="6" />
                </Grid.RenderTransform>
                <Control Template="{StaticResource ColorSliderThumbTemplate}" />
            </Grid>
        </Canvas>
    </Grid>
</UserControl>
