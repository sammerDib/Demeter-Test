<core:PickerControlBase
    x:Class="UnitySC.GUI.Common.Vendor.UIComponents.UserControls.ColorPicker.HexColorTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:core="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.UserControls.ColorPicker.Core"
    xmlns:converters="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.Converters"
    xmlns:behaviors="clr-namespace:UnitySC.GUI.Common.Vendor.UIComponents.Behaviors"
    x:Name="UserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ColorToHexConverter
                x:Key="ColorToHexConverter"
                OnShowAlphaChange="ColorToHexConverter_OnShowAlphaChange"
                ShowAlpha="{Binding Source={x:Reference UserControl}, Path=ShowAlpha}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TextBox
            x:Name="TextBox"
            Padding="0"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            Text="{Binding Path=SelectedColor, Converter={StaticResource ColorToHexConverter}, ElementName=UserControl}">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxFocusBehavior
                    ConfirmOnEnter="True"
                    DeselectOnFocusLoss="True"
                    SelectOnMouseClick="False" />
            </i:Interaction.Behaviors>
        </TextBox>
    </Grid>
</core:PickerControlBase>
