                            Minimum="0"
                            SliderArgbType="A"
                            SmallChangeBindable="{Binding ElementName=UserControl, Path=SmallChange}"
                            TabIndex="4"
                            Value="{Binding Path=Color.A, Mode=TwoWay, ElementName=UserControl}" />
