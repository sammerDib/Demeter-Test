<UserControl x:Name="_userControl"
    x:Class="BasicModules.ClusterDispatcher.ClusterDispatcherControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AdcTools="clr-namespace:AdcTools;assembly=AdcTools"
    xmlns:BasicModules="clr-namespace:BasicModules"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded">

    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding DataTable}" FrozenColumnCount="1"
                  CanUserAddRows="False" CanUserDeleteRows="False" 
                  Margin="10,10,10,10" HorizontalAlignment="Left"/>
    </Grid>

</UserControl>
