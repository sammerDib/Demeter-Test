<UserControl x:Class="UnitySC.PM.EME.Client.Modules.TestHardware.View.FilterWheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:UnitySC.Shared.UI.Converters;assembly=UnitySC.Shared.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sharedControls="clr-namespace:UnitySC.Shared.UI.Controls;assembly=UnitySC.Shared.UI"
             xmlns:viewModel="clr-namespace:UnitySC.PM.EME.Client.Modules.TestHardware.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewModel:FilterWheelViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid Margin="10,10,5,0"
          Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0"
                      FontSize="18"
                      Header="Motion Control">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="10"
                               FontSize="16"
                               Text="Filter Selection" />
                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              IsEnabled="{Binding FilterWheelBench.IsLoading, Converter={converters:InvertedBooleanConverter}}"
                              ItemsSource="{Binding FilterWheelBench.Filters}"
                              SelectedItem="{Binding FilterWheelBench.CurrentFilter}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="10"
                               FontSize="16"
                               Text="Wheel Position" />

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <sharedControls:ImageButton Width="30"
                                                    Margin="5,0"
                                                    Command="{Binding MoveLeft}"
                                                    CommandParameter="{Binding MoveLeft}"
                                                    ImageGeometry="{StaticResource ChevronLeftGeometry}"
                                                    ImageGeometryBrush="{StaticResource IconsColor}" />
                        <TextBox x:Name="TextPosition"
                                 Width="80"
                                 HorizontalContentAlignment="Right"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding PositionToMove, StringFormat='{}{0:F3}'}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter"
                                            Command="{Binding Move}"
                                            CommandParameter="{Binding ElementName=TextPosition, Path=Text, Converter={converters:StringToDoubleConverter}}" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <sharedControls:ImageButton Width="30"
                                                    Margin="5,0"
                                                    Command="{Binding MoveRight}"
                                                    ImageGeometry="{StaticResource ChevronRightGeometry}"
                                                    ImageGeometryBrush="{StaticResource IconsColor}" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1"
                      FontSize="18"
                      Header="Axis Configuration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Name" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.Name}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Axis ID" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.AxisID}" />

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Controller ID" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.ControllerID}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Moving Direction" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.MovingDirection}" />

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Position Min" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.PositionMin}" />

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="Position Max" />
                    <TextBlock Grid.Row="5"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Text="{Binding AxisConfiguration.PositionMax}" />
                </Grid>
            </GroupBox>


            <GroupBox Grid.Row="2"
                      FontSize="18"
                      Header="Filter Slots">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <TextBlock Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Name" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Right"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Position" />

                    <ItemsControl Grid.Row="1" Grid.Column="0" 
                                  Grid.ColumnSpan="2"
                                  ItemsSource="{Binding FilterSlots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Margin="5"
                                               FontSize="16"
                                               Text="{Binding Name}" />
                                    <TextBlock Grid.Column="1"
                                               Margin="5"
                                               HorizontalAlignment="Right"
                                               FontSize="16"
                                               Text="{Binding Position}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Column="1">
            <GroupBox FontSize="18"
                      Header="Position">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               Text="Current filter wheel position:" />
                    <TextBlock Grid.Column="1"
                               Margin="5"
                               FontSize="16"
                               Text="{Binding FilterWheelBench.RotationPosition, StringFormat='{}{0:F3}'}" />
                </Grid>
            </GroupBox>

            <GroupBox FontSize="18"
                      Header="Installed Filters">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Name" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Margin="5"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Type" />
                    <TextBlock Grid.Row="0" Grid.Column="2"
                               Margin="5"
                               HorizontalAlignment="Right"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="Position" />

                    <ItemsControl Grid.Row="1" Grid.Column="0"
                                  Grid.ColumnSpan="3"
                                  ItemsSource="{Binding FilterWheelBench.Filters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Margin="5"
                                               FontSize="16"
                                               Text="{Binding Name}" />
                                    <TextBlock Grid.Column="1"
                                               Margin="5"
                                               FontSize="16"
                                               Text="{Binding Type}" />
                                    <TextBlock Grid.Column="2"
                                               Margin="5"
                                               HorizontalAlignment="Right"
                                               FontSize="16"
                                               Text="{Binding Position}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>

</UserControl>
