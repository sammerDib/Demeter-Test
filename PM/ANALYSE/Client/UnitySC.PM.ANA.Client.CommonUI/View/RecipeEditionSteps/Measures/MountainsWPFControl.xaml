<UserControl x:Class="UnitySC.PM.ANA.Client.CommonUI.View.RecipeEditionSteps.Measures.MountainsWPFControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnitySC.PM.ANA.Client.CommonUI.View.RecipeEditionSteps.Measures"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"             
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <!-- Styles -->
        <ResourceDictionary Source="pack://application:,,,/UnitySC.Shared.UI;component/Styles/UnityStylesNew.xaml" />
    </UserControl.Resources>
    <Grid>
        <TextBlock Visibility="Collapsed" x:Name="tbError" Text="Error during loading Mountains - Check Mountains licence and installation" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <WindowsFormsHost Name="formHost">
        </WindowsFormsHost>        
        <xctk:BusyIndicator x:Name="busy" IsBusy="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
