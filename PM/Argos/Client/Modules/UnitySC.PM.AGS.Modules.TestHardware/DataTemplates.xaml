<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:UnitySC.PM.AGS.Modules.TestHardware.View"
                    xmlns:viewmodel="clr-namespace:UnitySC.PM.AGS.Modules.TestHardware.ViewModel">

    <!--Data Templates apply Views to ViewModel objects displayed in the UI-->

    <!--Stage Page-->

    <DataTemplate DataType="{x:Type viewmodel:StageViewModel}">
        <view:StageView />
    </DataTemplate>

    <!--Camera Page-->

    <DataTemplate DataType="{x:Type viewmodel:CamerasViewModel}">
        <view:CamerasView />
    </DataTemplate>

    <!--Camera Position Page-->

    <DataTemplate DataType="{x:Type viewmodel:CameraPositionViewModel}">
        <view:CameraPositionView />
    </DataTemplate>

    <!--Chamber Page-->

    <DataTemplate DataType="{x:Type viewmodel:ChamberViewModel}">
        <view:ChamberView />
    </DataTemplate>

    <!--I/O Page-->
    <DataTemplate DataType="{x:Type viewmodel:InputOutputViewModel}">
        <view:InputOutputView />
    </DataTemplate>
</ResourceDictionary>