<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:UnitySC.PM.AGS.Modules.TestHardware.View"
                    xmlns:viewmodel="clr-namespace:UnitySC.PM.AGS.Modules.TestHardware.ViewModel">

    <!--Data Templates apply Views to ViewModel objects displayed in the UI-->

    <!--Camera Position Page-->

    <DataTemplate DataType="{x:Type viewmodel:ApexHeightProbesViewModel}">
        <view:ApexHeightProbesView />
    </DataTemplate>

    <!--Camera Page-->

    <DataTemplate DataType="{x:Type viewmodel:BottomWidthProbesViewModel}">
        <view:BottomWidthProbesView />
    </DataTemplate>

    <!--Camera Position Page-->

    <DataTemplate DataType="{x:Type viewmodel:TopBevelHeightProbesViewModel}">
        <view:TopBevelHeightProbesView />
    </DataTemplate>

    <!--Chamber Page-->

    <DataTemplate DataType="{x:Type viewmodel:TopWidthProbesViewModel}">
        <view:topWidthProbesView />
    </DataTemplate>
</ResourceDictionary>