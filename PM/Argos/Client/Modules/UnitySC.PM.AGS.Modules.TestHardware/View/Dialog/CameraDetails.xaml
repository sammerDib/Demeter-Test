<Window x:Class="UnitySC.PM.AGS.Modules.TestHardware.View.Dialog.CameraDetails"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
            md:DialogServiceViews.IsRegistered="True"
           Title="Camera Details"
           Height="350"
           Width="500"
           ResizeMode="NoResize"
           WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UnitySC.PM.AGS.Modules.TestHardware;component/ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid VerticalAlignment="Center" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="18"
                   Grid.Row="0"
                   Grid.Column="0"
                  Style="{StaticResource MainMenuTitle2}"
                   Margin="5">Model</TextBlock>
        <TextBlock Grid.Column="1"
                   FontSize="18"
                   Grid.Row="0"
                   Margin="5"
                   Style="{StaticResource MainMenuTitle2}" />
        <TextBlock FontSize="18"
                   Grid.Row="1"
                   Grid.Column="0"
                    Style="{StaticResource MainMenuTitle2}"
                   Margin="5">Serial Number</TextBlock>
        <TextBlock FontSize="18"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="5"
                   Style="{StaticResource MainMenuTitle2}" />
        <TextBlock FontSize="18"
                   Grid.Row="2"
                   Grid.Column="0"
                   Style="{StaticResource MainMenuTitle2}"
                   Margin="5">Version</TextBlock>
        <TextBlock FontSize="18"
                   Grid.Column="1"
                   Grid.Row="2"
                   Margin="5"
                   Style="{StaticResource MainMenuTitle2}" />
        <TextBlock FontSize="18"
                   Grid.Row="3"
                   Grid.Column="0"
                    Style="{StaticResource MainMenuTitle2}"
                   Margin="5">Width</TextBlock>
        <TextBlock FontSize="18"
               Grid.Column="1"
               Grid.Row="3"
               Margin="5"
                Style="{StaticResource MainMenuTitle2}" />
        <TextBlock FontSize="18"
               Grid.Row="4"
               Grid.Column="0"
               Style="{StaticResource MainMenuTitle2}"
               Margin="5">Height</TextBlock>
        <TextBlock FontSize="18"
               Grid.Column="1"
               Grid.Row="4"
               Margin="5"
               Style="{StaticResource MainMenuTitle2}" />
    </Grid>
</Window>