      <Sharpness>2</Sharpness>
      <FanAutoOn>true</FanAutoOn>
      <DisplayID>1</DisplayID>
      <DisplayPosition>Top</DisplayPosition>
      <Resolution>3840x2160x32@60</Resolution>
      <PixelPitchHorizontal>0.2451</PixelPitchHorizontal>
      <PixelPitchVertical>0.2451</PixelPitchVertical>
      <ScreenStabilizationTimeSec>0.15</ScreenStabilizationTimeSec>
