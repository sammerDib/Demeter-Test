      <IsSimulated>false</IsSimulated>
      <LogLevel>Debug</LogLevel>
      <ControllerID>ScreenDensitronDM430GNControllerFS</ControllerID>
      <BacklightPercentage>100</BacklightPercentage>
      <BrightnessPercentage>50</BrightnessPercentage>      
